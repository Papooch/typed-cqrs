{
  "compilerOptions": {
    "sourceMap": false,
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": false,
    "strict": true,
    "strictNullChecks": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "lib": ["es7"],
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {},
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["example", "node_modules"]
}
